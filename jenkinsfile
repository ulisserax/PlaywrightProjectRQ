pipeline {
   agent any
    tools { nodejs "default" }
    stages {
        stage('runing test') {
                        
            steps {
                // Depends on your language / test framework
                sh 'node -v'
                sh 'npm -v'
                sh 'npm install'
                sh 'npm run env:stage'
            }
        }

        stage ('SCM Checkout') {
            steps {
                script {
                    CI_ERROR = "Failed while checking out SCM"
                    
                }
            }
        }
    }

    post{
        always{
            slackSend( channel: "#playwright", token: "slack-token", color: "good", message: "${custom_msg()}")
        }
    }
}